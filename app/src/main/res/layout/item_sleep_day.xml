<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Columna 1: Fecha -->
    <TextView
        android:id="@+id/textFechaItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Mar 9/1"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"/>

    <!-- Columna 2: Barra de progreso visual -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Contenedor de la barra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#E0E0E0"
            android:orientation="horizontal">

            <!-- Barra de progreso (parte llena) -->
            <View
                android:id="@+id/barraProgreso"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#4CAF50"/>

        </LinearLayout>

        <!-- Texto de progreso -->
        <TextView
            android:id="@+id/textProgreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6.5/8.0 h"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Columna 3: Horas totales -->
    <TextView
        android:id="@+id/textHoras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6.5 h"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:gravity="end"/>

</LinearLayout>