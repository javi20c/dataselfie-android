<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pantalla"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro Diario de Sostenibilidad"
            android:textColor="@color/verde_principal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtFechaHoy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(fecha)"
            android:textColor="@color/gris_texto"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_blanca"
            android:orientation="vertical"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/chkMovilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Usé transporte público, bicicleta o caminé."
                android:textColor="@color/gris_texto"
                app:buttonTint="@color/checkbox_verde"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <CheckBox
                android:id="@+id/chkNoImpresiones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. No realicé impresiones."
                android:textColor="@color/gris_texto"
                app:buttonTint="@color/checkbox_verde"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <CheckBox
                android:id="@+id/chkNoDescartables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. No utilicé envases descartables (usé mi termo/taza)."
                android:textColor="@color/gris_texto"
                app:buttonTint="@color/checkbox_verde"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <CheckBox
                android:id="@+id/chkRecicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Separé y reciclé materiales (vidrio, plástico, papel)."
                android:textColor="@color/gris_texto"
                app:buttonTint="@color/checkbox_verde"
                android:textSize="14sp" />

            <!-- BOTONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:background="@drawable/boton_verde"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:background="@drawable/boton_rojo"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

